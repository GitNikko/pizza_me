<ul class="results-list"><% @sort_by_rating.reverse.map do |a| %>
	<div class="each-result">
		<% if a["image_url"].nil? %>
		<%= link_to (image_tag("pizza-icon.jpg", class: "index-image")), {:controller => "restaurants", 															:action => "show", :id => a["id"]} %>
		<% else %>
		<%= link_to (image_tag(a["image_url"], class: "index-image", alt: "No image available")), {:controller => "restaurants", 															:action => "show", :id => a["id"]} %>
		<% end %>
		<div class="result-content">
		<li class="result-name"><%= link_to a["name"], {:controller => 												"restaurants", :action => "show", :id => a["id"]} %></li>	
		<span class="result-rating result-name"><span class="fa fa-star" 					aria-hidden="true"></span> <%= a["rating"]%> </span>
		<span>(<%= a["review_count"]%> reviews)</span>
		<p class="price-icon"><%= a["price"]%></p>
		<p><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
			<span><%= a["location"]["display_address"].to_sentence %></span>
		</div>
	</div>
	<% end %>		
</ul>