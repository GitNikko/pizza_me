<% provide(:title, current_user.name) %>
<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-6 col-md-offset-3">
			<h1>
				
				<%= image_tag current_user.profile_image, size: "120x120" %>
				<%= current_user.name %>
			</h1>
			<% if @user.reviews.any? %>
			<h3>Reviews (<%=@user.reviews.count %>)</h3>
			<div class="users-review-list">
				<p></p>
				<%= render @reviews %>
			</div>
				<%= will_paginate @reviews %>
			<% end %>
			<%= @full_hash %>
		</div>
	</div>
</div>
