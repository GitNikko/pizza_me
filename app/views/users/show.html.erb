<% provide(:title, current_user.name) %>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>
				
				<%= image_tag current_user.profile_image, size: "120x120" %>
				<%= current_user.name %>
			</h1>
			<% if @user.reviews.any? %>
			<h3>Reviews (<%=@user.reviews.count %>)</h3>
			<ol class="reviews">
				<p></p>
				<%= render @reviews %>
			</ol>
				<%= will_paginate @reviews %>
			<% end %>
		</div>
	</div>
</div>
