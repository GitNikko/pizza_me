<% provide(:title, "Edit profile") %>
<h1 id="signup-header">Update your profile</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 edit-form">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary edit-submit" %>
    <% end %>
    <div class="delete-link"><%= link_to "Delete my account", @user, method: :delete,
                    data: { confirm: "Are you sure you want to delete this account?" } %></div>
  </div>
</div>
