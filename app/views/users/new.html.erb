<% provide(:title, "Sign up") %>
<h1 id="signup-header">Sign up</h1>
<div class="container">
<div class="row">
	<div class="col-md-4 col-md-offset-2 social-buttons">	
		<%= link_to image_tag("facebook_button.png", class: "facebook-button"), 								"/auth/facebook" %>
		<%= link_to image_tag("google-button.png", class: "google-button"),
								"/auth/google_oauth2" %>
		<hr>
		<h6>OR</h6>
	</div>	
	<div class="col-md-4">	
		<%= form_for(@user, url: signup_path) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
			
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>
			
			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>
			
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation, class: 'form-control' %>
			
			<%= f.submit "Create my account!", class: "btn btn-success" %>
		<% end %>
		<p class="sign-up-now">Already a member? <%= link_to "Log in here", login_path %></p>
	</div>
</div>
</div>