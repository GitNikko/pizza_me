<h1 id="signup-header">Log in</h1>
<div class="container">
<div class="row">
	<div class="col-md-4 col-md-offset-2 social-buttons">	
		<%= link_to image_tag("facebook_button.png", class: "facebook-button"), 								"http://www.facebook.com" %>
		<%= link_to image_tag("google-button.png", class: "google-button"),
								"http://www.google.com" %>
		<hr>
		<h6>OR</h6>
	</div>	
	<div class="col-md-4">	
		<%= form_for(:session, url: login_path) do |f| %>
			
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>
			
			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>
		
			<%= f.submit "Log in", class: "btn btn-success" %>
		<% end %>
		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>
</div>
