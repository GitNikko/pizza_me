<% provide(:title, "Log in") %>
<h1 id="signup-header">Log in</h1>
<div class="container">
<div class="row">
	<div class="col-md-4 col-md-offset-2 social-buttons">	
		<%= link_to image_tag("facebook_button.png", class: "facebook-button"), 								"/auth/facebook" %>
		<%= link_to image_tag("google-button.png", class: "google-button"),
								"/auth/google_oauth2" %>
		<hr>
		<h6>OR</h6>
	</div>	
	<div class="col-md-4">	
		<%= form_for(:session, url: login_path) do |f| %>
			
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>
			
			<%= f.label :password %>
			<%= link_to "(forgot password?)", new_password_reset_path %>
			<%= f.password_field :password, class: 'form-control' %>
			
			<%= f.label :remember_me, class: "checkbox inline" do %>
				<%= f.check_box :remember_me %>
				<span>Remember me on this device</span>
			<% end %>
		
			<%= f.submit "Log in", class: "btn btn-success" %>
		<% end %>
		<span class="sign-up-now">New user? <%= link_to "Sign up now!", signup_path %></span>
	</div>
</div>
<p><%= @auth_hash %></p>
</div>
